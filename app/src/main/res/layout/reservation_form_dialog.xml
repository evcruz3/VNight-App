<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reserveDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/dialog_spinnerPosition"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/preferredPosition"
        app:layout_constraintTop_toBottomOf="@+id/preferredPosition" />

    <Switch
        android:id="@+id/dialog_switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="I am reserving for a guest"
        app:layout_constraintEnd_toEndOf="@+id/spinnerPosition"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>